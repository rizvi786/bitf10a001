@model bitf10a001_project_sign_up_.Models.modelAds

@{
    ViewBag.Title = "Details";
}



<!-- top header + icon + nav bar -->
<div class="row">
    <br />

    <!-- site logo -->
    <div class="span4">
        <a id="header_logo" href="/Index/index" title="FURNITURE">
            <img src="/img/logoNew.png" alt="FURNITURE" />
        </a>
    </div>
    <!-- site logo end-->
    @if(Session["name"] != null){
    <!-- login logout and account -->
    <div class="span6">
        <!-- login logout and account -->

        <br />@*postAd.html?tab3*@

        <p class="mypara" id="logined">Assalam o Alaikum, ( @Session["name"] ) &nbsp;<a href="/Index/logout">Sign out</a> </p>

    </div>
    <!-- login logout and account end -->

    <!-- ad post button -->
    <div class="span2">
        <a class="btn btn-success btn-large pull-right" style="font-size: medium" href="/Index/postAd">POST FREE AD</a>
        @* postAd.html?tab1 *@
    </div>
    <!-- ad post button end-->
    }

</div>

<hr />

<div class="row">
    
    <div class="span8" style="background-color: rgba(191, 220, 220, 0.50); padding-top: 20px">
        <div style="border-bottom: 1px solid white">
            <p style="padding-left: 20px;">
                @Html.DisplayFor(model => model.Obj1.area), @Html.DisplayFor(model => model.Obj1.city)
                |   Posted on: @Model.Obj1.date at @Model.Obj1.time)  |   Ad ID: @Html.DisplayFor(model => model.Obj1.Id)
            </p>
        </div>

        <div style="padding-left: 20px">
            <h3 style="color: #3b48aa;">@Model.Obj1.adtitle</h3>
            <h4 style="color: red">Rs. @Model.Obj1.price/-</h4>

            @{if (Model.Obj2 != null){
                if (Model.Obj2.subcatagory != null)
                {
                    <p>Brand: @Model.Obj2.subcatagory </p>;
                    if (Model.Obj2.model != null)
                    {
                        <p>Model: @Model.Obj2.model </p>
                    }
                    if (Model.Obj2.accesories != null)
                    {
                        <p>Accessories: 
                            @if(Model.Obj2.accesories == "With")
                            {
                                 <strong>Yes</strong>
                            }
                            else
                            {
                                <strong>No</strong>
                            } </p>
                    }
                }
              }
              }


        </div>

        <div style="border-top: 1px solid white">
            <p style="padding-left: 20px; padding-top: 10px">
                <span class="label label-success" style="font-size: medium">@Model.Obj1.postas</span>
                Condition: @Model.Obj1.condtion
                - Warranty: @Model.Obj1.warranty
            </p>
        </div>
    </div>

    <div class="span4" style="background-color: rgba(191, 220, 220, 0.50); padding-top: 10px">

        <div style="border-top: 1px; border-bottom: 1px solid white">
            <h4 style="padding-left: 20px;">@Model.Obj1.Name</h4>
        </div>
        <br />
        <div style="padding-left: 20px; padding-bottom: 6px">
            <strong style="font-size: smaller;">Cell: @Model.Obj1.mobile1
                <br />
                Cell: @Model.Obj1.mobile2
                <br />
                Email: @Model.Obj1.emailacc
                <br />
                Email: @Model.Obj1.email
                <br />
            </strong>
        </div>
        <br />
        <div style="border-top: 1px solid white">
            <p style="padding-left: 20px; padding-top: 10px">
                <span class="label label-warning" style="font-size: medium">@Model.Obj1.adis</span>
            </p>
        </div>

    </div>

</div>

<hr />


<div class="row">

    <div class="span8" style="padding-top: 20px;">
        <div style="border-bottom: 1px solid white">
        </div>

        <p style="padding-left: 20px; padding-right: 20px">

            @Html.DisplayFor(model => model.Obj1.description)
        </p>
    </div>

    <div class="span4" style="padding-top: 20px;">

        <a href="/Files/@Html.DisplayFor(model => model.Obj1.img1)" rel="lightbox[roadtrip]">
            <img id="imgd1" class="img-polaroid imgsDetail" src="/Files/@Html.DisplayFor(model => model.Obj1.img1)" /></a>
        <a href="/Files/@Html.DisplayFor(model => model.Obj1.img2)" rel="lightbox[roadtrip]">
            <img id="imgd2" class="img-polaroid imgsDetail" src="/Files/@Html.DisplayFor(model => model.Obj1.img2)" /></a>
        <a href="/Files/@Html.DisplayFor(model => model.Obj1.img3)" rel="lightbox[roadtrip]">
            <img id="imgd3" class="img-polaroid imgsDetail" src="/Files/@Html.DisplayFor(model => model.Obj1.img3)" /></a>
        <a href="/Files/@Html.DisplayFor(model => model.Obj1.img4)" rel="lightbox[roadtrip]">
            <img id="imgd4" class="img-polaroid imgsDetail" src="/Files/@Html.DisplayFor(model => model.Obj1.img4)" /></a>
    </div>

</div>




<script type="text/javascript">
    $(document).ready(function ($) {
        $('a').smoothScroll({
            speed: 2000,
            easing: 'easeInOutCubic'
        });

        $('.showOlderChanges').on('click', function (e) {
            $('.changelog .old').slideDown('slow');
            $(this).fadeOut();
            e.preventDefault();
        })
    });

    $('#imgd1').click(function () {
        $('#Display').attr('src', "/Files/@Html.DisplayFor(model => model.Obj1.img1)");
    });
    $('#imgd2').click(function () {
        $('#Display').attr('src', "/Files/@Html.DisplayFor(model => model.Obj1.img2)");
    });
    $('#imgd3').click(function () {
        $('#Display').attr('src', "/Files/@Html.DisplayFor(model => model.Obj1.img3)");
    });
    $('#imgd4').click(function () {
        $('#Display').attr('src', "/Files/@Html.DisplayFor(model => model.Obj1.img4)");
    });
</script>


<hr />

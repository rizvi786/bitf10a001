@model bitf10a001_project_sign_up_.Models.allad

@{
    ViewBag.Title = "Delete Ad";
}

<h3>Are you sure you want to delete this?</h3>

<!-- top header + icon + nav bar -->
<div class="row">
    <br />

    <!-- site logo -->
    <div class="span4">
        <a id="header_logo" href="/Index/index" title="FURNITURE">
            <img src="/img/logoNew.png" alt="FURNITURE" />
        </a>
    </div>
    <!-- site logo end-->

    <!-- login logout and account -->
    <div class="span6">
        <!-- login logout and account -->

        <br />@*postAd.html?tab3*@

        <p class="mypara" id="logined">Assalam o Alaikum, ( @Session["name"] ) &nbsp;<a href="/Index/logout">Sign out</a> </p>

    </div>
    <!-- login logout and account end -->

    <!-- ad post button -->
    <div class="span2">
        <a class="btn btn-success btn-large pull-right" style="font-size: medium" href="/Index/postAd">POST FREE AD</a>
        @* postAd.html?tab1 *@
    </div>
    <!-- ad post button end-->

</div>

<hr />
@using (Html.BeginForm())
{
    <a class="btn btn-success" style="font-size: medium" href="/Index/myAds">Back to List</a>
    <input class="btn btn-info" style="font-size: medium" type="submit" value="Delete" />
}

<div class="row">

    <div class="span8" style="background-color: rgba(191, 220, 220, 0.50); padding-top: 20px">
        <div style="border-bottom: 1px solid white">
            <p style="padding-left: 20px;">
                @Html.DisplayFor(model => model.area), @Html.DisplayFor(model => model.city)
                |   Posted on: @Html.DisplayFor(model => model.date) at @Html.DisplayFor(model => model.time)   |   Ad ID: @Html.DisplayFor(model => model.Id)
            </p>
        </div>

        <div style="padding-left: 20px">
            <h3 style="color: #3b48aa;">@Html.DisplayFor(model => model.adtitle)</h3>
            <h4 style="color: red">Rs. @Html.DisplayFor(model => model.price)/-</h4>
            <br />
        </div>

        <div style="border-top: 1px solid white">
            <p style="padding-left: 20px; padding-top: 10px">

                <span class="badge badge-success" style="font-size: medium">@Html.DisplayFor(model => model.postas)</span>
                Condition: @Html.DisplayFor(model => model.condtion)
                - Warranty: @Html.DisplayFor(model => model.warranty)
            </p>
        </div>
    </div>

    <div class="span4" style="background-color: rgba(191, 220, 220, 0.50); padding-top: 10px">

        <div style="border-top: 1px; border-bottom: 1px solid white">
            <h4 style="padding-left: 20px;">@Session["name"]</h4>
        </div>
        <br />
        <div style="padding-left: 20px; padding-bottom: 6px">
            <strong style="font-size: smaller;">Cell: @Html.DisplayFor(model => model.mobile1)
                <br />
                Cell: @Html.DisplayFor(model => model.mobile2)
                <br />
                Email: @Html.DisplayFor(model => model.emailacc)
                <br />
                Email: @Html.DisplayFor(model => model.email)
                <br />
            </strong>
        </div>

        <div style="border-top: 1px solid white">
            <p style="padding-left: 20px; padding-top: 10px">
                <span class="badge badge-warning" style="font-size: medium">@Html.DisplayFor(model => model.adis)</span>
            </p>
        </div>

    </div>

</div>

<hr />


<div class="row">

    <div class="span8" style="padding-top: 20px;">
        <p style="padding-left: 20px; padding-right: 20px">

            @Html.DisplayFor(model => model.description)
        </p>
    </div>

    <div class="span4" style="padding-top: 20px;">

        <a href="/Files/@Html.DisplayFor(model => model.img1)" rel="lightbox[roadtrip]">
            <img id="imgd1" class="img-polaroid imgsDetail" src="/Files/@Html.DisplayFor(model => model.img1)" /></a>
        <a href="/Files/@Html.DisplayFor(model => model.img2)" rel="lightbox[roadtrip]">
            <img id="imgd2" class="img-polaroid imgsDetail" src="/Files/@Html.DisplayFor(model => model.img2)" /></a>
        <a href="/Files/@Html.DisplayFor(model => model.img3)" rel="lightbox[roadtrip]">
            <img id="imgd3" class="img-polaroid imgsDetail" src="/Files/@Html.DisplayFor(model => model.img3)" /></a>
        <a href="/Files/@Html.DisplayFor(model => model.img4)" rel="lightbox[roadtrip]">
            <img id="imgd4" class="img-polaroid imgsDetail" src="/Files/@Html.DisplayFor(model => model.img4)" /></a>
    </div>

</div>

<hr />

@using (Html.BeginForm())
{
    <a class="btn btn-success" style="font-size: medium" href="/Index/myAds">Back to List</a>
    <input class="btn btn-info" style="font-size: medium" type="submit" value="Delete" />
}


<script type="text/javascript">
    $(document).ready(function ($) {
        $('a').smoothScroll({
            speed: 2000,
            easing: 'easeInOutCubic'
        });

        $('.showOlderChanges').on('click', function (e) {
            $('.changelog .old').slideDown('slow');
            $(this).fadeOut();
            e.preventDefault();
        })
    });

    $('#imgd1').click(function () {
        $('#Display').attr('src', "/Files/@Html.DisplayFor(model => model.img1)");
    });
    $('#imgd2').click(function () {
        $('#Display').attr('src', "/Files/@Html.DisplayFor(model => model.img2)");
    });
    $('#imgd3').click(function () {
        $('#Display').attr('src', "/Files/@Html.DisplayFor(model => model.img3)");
    });
    $('#imgd4').click(function () {
        $('#Display').attr('src', "/Files/@Html.DisplayFor(model => model.img4)");
    });
</script>


<hr />


